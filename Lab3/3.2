 * The function is expected to return an INTEGER.
 * The function accepts following parameters:
 *  1. INTEGER X
 *  2. INTEGER N
 */


int powerSum(int X, int N, int current = 1) {
   
    if (X == 0) {//if x=0, return 1 since it is a valid combination;
        return 1;
    }
   
    if (X < 0 || current > X) {//if x is negative or current value is higher than x then return 0
        return 0;
    }
    
    return powerSum(X - pow(current, N), N, current + 1) + powerSum(X, N, current + 1);//include current number raised to power n or skip it
}


